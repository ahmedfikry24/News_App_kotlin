<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp">

    <ProgressBar
        android:id="@+id/articlesImageProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/articlesCardView"
        app:layout_constraintBottom_toBottomOf="@id/articlesCardView"
        app:layout_constraintStart_toStartOf="@id/articlesCardView"
        app:layout_constraintEnd_toEndOf="@id/articlesCardView"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/articlesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="24dp"
        >
        <ImageView
            android:id="@+id/articlesImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/articlesCardView"
        app:layout_constraintStart_toStartOf="@id/articlesCardView"
        android:textColor="@color/purple_500"
        android:layout_margin="8dp"
        android:textSize="12sp"
        tools:text="ahmed fikry"
        />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/authorTextView"
        app:layout_constraintStart_toStartOf="@id/articlesCardView"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="asjhdasdh lajjddj ad;jd;jas asffasf "
        />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
        app:layout_constraintEnd_toEndOf="@id/articlesCardView"
        android:textColor="@color/purple_500"
        android:layout_margin="8dp"
        android:textSize="10sp"
        tools:text="20 12 2023"
        />
</androidx.constraintlayout.widget.ConstraintLayout>